@model TaskManagerApp.Pages.Tasks.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Are you sure you want to delete this Task?</h1>

<div>
    <h4>Task Details:</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Task.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Task.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Task.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Task.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Task.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Task.Status)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Task.UserId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Task.UserId)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Task.Id" />
        <input type="submit" value="Delete" class="btn btn-outline-danger" /> |
        <a asp-page="./Index" class="btn btn-warning">Back to List</a>
    </form>
</div>
